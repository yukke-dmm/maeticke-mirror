<div class="container">
	<div class="row">
	<h3>オーナー一覧</h3>
		<table class="table table-borderless">
			<thead class="thead-dark">
				<tr>
					<th>オーナーID</th>
					<th>カテゴリー</th>
					<th>店舗名</th>
					<th>電話番号</th>
					<th>ステータス</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @owners.each do |owner| %>
					<tr>
						<td><%= owner.id %></td>
						<td><%= owner.category.name %></td>
						<td>
		                	<%= link_to admin_owner_path(owner.id) do %>
							<%= owner.name %>
							<% end %>
				    	</td>
				    	<td><%= owner.phone_number %></td>
				    	<td>
				    		<% if owner.status == false %>
					    			未許可
					    	<% else %>
					    		    許可
					    	<% end %>
		            	</td>
		            	<td><%= link_to "退会させる",admin_owner_path(owner.id), method: :delete, data: { confirm: '本当に退会させますか？' }, class: "label label-danger" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<br>
