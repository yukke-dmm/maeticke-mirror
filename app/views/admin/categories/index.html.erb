<div class="container">
  <div class="row">
 <h3>カテゴリ一覧・追加</h3>
        <%= form_for(@category, url: admin_categories_path) do |f| %>
                <span>カテゴリ</span>
                <%= f.text_field :name, class:"form-control" %>
                <span></span>
                    <span>有効</span><%= f.radio_button :status, false %>
                    <span>無効</span><%= f.radio_button :status, true %>
                <span>
                <%= f.submit "追加", class:"btn btn-primary btn-md btn-block btn-base-1 mt-20" %>
                </span>
        <% end %>

        <table class="table table-striped">
        <thead>
        <tr>
            <th>カテゴリ</th>
            <th>状態</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td><%= category.name %></td>
            <td>
                <% if category.status == false %>
                    <p>有効</p>
                <% else %>
                    <p>無効</p> 
                <% end %>
            </td>
            <td><%= link_to "編集する", edit_admin_category_path(category), class: "btn btn-primary" %></td>
            <td><%= link_to "削除する", admin_category_path(category), method: :delete, data: { confirm: 'Are You Sure?'} %></td>
        </tr>
        <% end %>
        </tbody>
    </table>

    <%= paginate @categories %>
</div>
</div>
