<div class="container">
  <div class="row">
      <h3>カテゴリ一覧・追加</h3>
      <div class="new">
        <%= form_for(@category, url:admin_category_path(@category)) do |f| %>
                <%= f.text_field :name, class:"form-control", placeholder:"Name" %>
                <span>有効</span><%= f.radio_button :status, false %>
                <span>無効</span><%= f.radio_button :status, true %>
                <%= f.submit "変更を保存する", class: "btn btn-primary" %>
        <% end %>
</div>
</div>
